<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Academy\StudentItineraryProgress\Domain\StudentItineraryProgress" table="students_itineraries_progress">
        <id name="uuid" type="student_itinerary_progress_uuid" column="uuid" length="36" />

        <field name="itineraryUuid" type="itinerary_uuid" column="itinerary_uuid" />

        <field name="studentUuid" type="student_uuid" column="student_uuid" />

        <field name="previousActivityUuid" type="activity_uuid" column="previous_activity_uuid" nullable="true" />

        <field name="nextActivityUuid" type="activity_uuid" column="next_activity_uuid" nullable="true" />

        <embedded name="hasIncreasedLevel"
                  class="Academy\StudentItineraryProgress\Domain\StudentItineraryProgressHasIncreasedLevel"
                  use-column-prefix="false"   />

    </entity>

</doctrine-mapping>
